<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.GameController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <HBox fx:id="navBar" alignment="TOP_CENTER" prefHeight="54.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
            <children>
               <Label fx:id="homeNav" alignment="CENTER" maxHeight="1.7976931348623157E308" prefHeight="34.0" prefWidth="144.0" styleClass="btn-1" text="Trang chủ">
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin>
               </Label>
               <Label fx:id="gameNav" alignment="CENTER" maxHeight="1.7976931348623157E308" prefHeight="34.0" prefWidth="173.0" styleClass="btn-22" text="Ôn tập">
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
               </Label>
               <Label fx:id="translateNav" alignment="CENTER" maxHeight="1.7976931348623157E308" prefHeight="34.0" prefWidth="183.0" styleClass="btn-1" text="Dịch nghĩa">
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
               </Label>
               <HBox alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                  <children>
                     <Circle fx:id="userNav" fill="#ffffff00" radius="27.0" stroke="BLACK" strokeType="INSIDE">
                        <HBox.margin>
                           <Insets right="20.0" />
                        </HBox.margin>
                     </Circle>
                  </children>
               </HBox>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </HBox>
         <VBox prefHeight="200.0" prefWidth="100.0" />
         <VBox alignment="TOP_CENTER" prefHeight="379.0" prefWidth="800.0">
            <children>
               <Button fx:id="game1Nav" focusTraversable="false" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" text="Game 1">
                  <VBox.margin>
                     <Insets bottom="10.0" top="20.0" />
                  </VBox.margin>
               </Button>
               <Button fx:id="game2Nav" focusTraversable="false" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" text="Game 2">
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin></Button>
               <Button fx:id="game3Nav" focusTraversable="false" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" text="Game 3" />
            </children>
         </VBox>
      </VBox>
   </children>
</AnchorPane>
