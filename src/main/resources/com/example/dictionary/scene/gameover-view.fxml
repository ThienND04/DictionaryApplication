<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.GameOverController">
    <children>
        <VBox>
            <HBox fillHeight="false">
                <children>
                    <Button fx:id="homeNav" focusTraversable="false" mnemonicParsing="false" text="HOME">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button fx:id="gameNav" focusTraversable="false" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: gray;" text="GAME" textFill="WHITE">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button fx:id="myListNav" focusTraversable="false" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="MY LIST">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </children>
            </HBox>
        </VBox>
      <WebView fx:id="scoreView" layoutX="227.0" layoutY="149.0" prefHeight="54.0" prefWidth="139.0" />
      <ButtonBar layoutX="365.0" layoutY="346.0" prefHeight="40.0" prefWidth="215.0">
         <buttons>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancelBtnClicked" prefHeight="24.0" prefWidth="86.0" text="Cancel" />
            <Button fx:id="playAgainBtn" mnemonicParsing="false" onAction="#playAgainBtnClicked" prefHeight="24.0" prefWidth="93.0" text="Play again" />
         </buttons>
      </ButtonBar>
    </children>
</AnchorPane>
