                     </children>
                  </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="TOP_CENTER">
                    <children>
                        <Button fx:id="editBtn" contentDisplay="BOTTOM" focusTraversable="false" mnemonicParsing="false" prefHeight="26.0" prefWidth="100.0" text="Edit" visible="false">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="saveBtn" contentDisplay="BOTTOM" focusTraversable="false" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="100.0" text="Save" visible="false">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <HBox.margin>
                                <Insets left="30.0" right="30.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="deleteBtn" contentDisplay="BOTTOM" focusTraversable="false" layoutX="210.0" layoutY="10.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="100.0" text="Delete" visible="false">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
