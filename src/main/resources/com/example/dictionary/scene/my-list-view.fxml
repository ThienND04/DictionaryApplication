<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="400.0" prefWidth="837.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.MyListController">
    <children>
        <VBox alignment="CENTER" layoutX="-127.0" layoutY="-2.0" prefHeight="400.0" prefWidth="837.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox fillHeight="false">
                    <children>
                        <Button fx:id="homeNav" focusTraversable="false" mnemonicParsing="false" text="HOME">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="gameNav" focusTraversable="false" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="GAME">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="myListNav" focusTraversable="false" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: gray;" text="MY LIST" textFill="WHITE">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
                <TextField fx:id="wordToFind">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </TextField>
                <HBox VBox.vgrow="ALWAYS">
                    <children>
                        <ListView fx:id="listView" maxHeight="10000.0" maxWidth="300.0" minHeight="0.0" minWidth="150.0" HBox.hgrow="ALWAYS" />
                  <WebView fx:id="definitionView" prefHeight="288.0" prefWidth="553.0" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="49.0" prefWidth="837.0">
               <children>
                      <Button fx:id="rmBtn" contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="26.0" prefWidth="200.0" text="Remove this word" visible="false">
                          <cursor>
                              <Cursor fx:constant="HAND" />
                          </cursor>
                      </Button>
                  <Button fx:id="editBtn" mnemonicParsing="false" onAction="#handleEditBtn" prefWidth="57.0" text="Edit" visible="false" />
               </children>
            </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
