<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.SignupController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="welcomeText" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="700.0" prefHeight="500.0" prefWidth="282.0" styleClass="btn-11" text="Dictionary Application" textOverrun="CLIP" wrapText="true" HBox.hgrow="ALWAYS" />
