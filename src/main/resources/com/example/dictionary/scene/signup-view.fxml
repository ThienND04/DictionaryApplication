                     <children>
                        <VBox alignment="TOP_RIGHT" spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                 <children>
                                    <Label maxHeight="1.7976931348623157E308" text="Tên đăng nhập" />
                                    <TextField fx:id="username" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                 <children>
                                    <Label maxHeight="1.7976931348623157E308" text="Nhập mật khẩu" />
                                    <PasswordField fx:id="password1" />
                                 </children>
                              </HBox>
                              <HBox spacing="10.0">
                                 <children>
                                    <Label maxHeight="1.7976931348623157E308" text="Xác nhận mật khẩu" />
                                    <PasswordField fx:id="password2" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
