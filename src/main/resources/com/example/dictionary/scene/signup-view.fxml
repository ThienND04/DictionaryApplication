                        <Button fx:id="loginBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Đăng nhập" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
        </VBox>
    </children>
</AnchorPane>
