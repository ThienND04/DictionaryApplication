<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.TranslateController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <HBox fillHeight="false">
                <children>
                    <Button fx:id="homeNav" focusTraversable="false" mnemonicParsing="false" text="HOME">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button fx:id="gameNav" focusTraversable="false" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="GAME">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>                    
                    <Button fx:id="translateNav" focusTraversable="false" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: gray;" text="TRANSLATE" textFill="white">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </children>
            </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
               <VBox maxWidth="300.0" prefHeight="334.0" prefWidth="116.0" style="-fx-background-color: yellow;" HBox.hgrow="ALWAYS">
                  <children>
                     <HBox>
                        <children>
                           <TextField fx:id="wordToTranslate" HBox.hgrow="ALWAYS" />
                           <Button fx:id="translateBtn" focusTraversable="false" mnemonicParsing="false" text="Translate" />
                        </children>
                        <VBox.margin>
                           <Insets bottom="20.0" />
                        </VBox.margin>
                     </HBox>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <HBox alignment="TOP_CENTER">
                              <children>
                                 <Button fx:id="speakBtn" focusTraversable="false" mnemonicParsing="false" text="Speak" />
                                 <Button fx:id="addBtn" focusTraversable="false" mnemonicParsing="false" text="Add this word" />
                              </children>
                              <VBox.margin>
                                 <Insets bottom="20.0" />
                              </VBox.margin>
                           </HBox>
                           <TextArea fx:id="translatedWord" prefHeight="89.0" prefWidth="248.0" />
                        </children>
                     </VBox>
                  </children>
                  <HBox.margin>
                     <Insets right="20.0" />
                  </HBox.margin>
               </VBox>
               <WebView fx:id="detail" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </WebView>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
         </HBox>
        </VBox>
    </children>
</AnchorPane>
