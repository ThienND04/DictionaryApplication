<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.TranslateController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <children>
                    <VBox maxWidth="300.0" prefHeight="334.0" prefWidth="116.0" HBox.hgrow="ALWAYS">
                        <children>
                            <HBox alignment="TOP_RIGHT">
                                <children>
                                    <ChoiceBox fx:id="type" focusTraversable="false" />
                                </children>
                                <VBox.margin>
                                    <Insets bottom="10.0" />
                                </VBox.margin>
                            </HBox>
                            <HBox>
                                <children>
                                    <TextField fx:id="wordToTranslate" prefHeight="26.0" prefWidth="63.0" HBox.hgrow="ALWAYS" />
                                    <Button fx:id="translateBtn" focusTraversable="false" mnemonicParsing="false" text="Dịch" />
                                </children>
                                <VBox.margin>
                                    <Insets />
                                </VBox.margin>
                            </HBox>
                            <ListView fx:id="suggestions" focusTraversable="false" maxHeight="300.0" prefHeight="106.0" prefWidth="248.0" style="-fx-border-color: black;" VBox.vgrow="ALWAYS" />
                            <VBox prefHeight="180.0" prefWidth="248.0" VBox.vgrow="ALWAYS">
                                <children>
                                    <HBox alignment="TOP_CENTER" prefHeight="44.0" prefWidth="300.0">
                                        <children>
                                            <Button fx:id="speakBtn" focusTraversable="false" mnemonicParsing="false">
                                    <graphic>
                                                  <ImageView fx:id="speakImg" fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true" styleClass="btn-1" />
                                    </graphic></Button>
                                            <Button fx:id="addBtn" focusTraversable="false" mnemonicParsing="false" text="Thêm mới" />
                                            <Button fx:id="editBtn" focusTraversable="false" mnemonicParsing="false" text="Chỉnh sửa" />
                                        </children>
                                        <VBox.margin>
                                            <Insets bottom="20.0" />
                                        </VBox.margin>
                                    </HBox>
                                    <HBox style="-fx-border-color: black;">
                                        <children>
                                            <WebView fx:id="meaningView" maxHeight="248.0" prefHeight="248.0" prefWidth="248.0" HBox.hgrow="ALWAYS" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </children>
                        <HBox.margin>
                            <Insets right="20.0" />
                        </HBox.margin>
                    </VBox>
                    <HBox prefHeight="334.0" prefWidth="268.0" style="-fx-border-color: black;" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <children>
                            <WebView fx:id="detail" prefHeight="333.0" prefWidth="350.0" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                </children>
                <VBox.margin>
                    <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                </VBox.margin>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
